{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": false
  },
  "exclude": [
    "./node_modules/**/*",
    "./__tests__/**/*",
    "./dist/**/*"
  ]
}
